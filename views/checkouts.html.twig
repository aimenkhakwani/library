<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <meta charset="utf-8">
    <title>Epicodus Public Library</title>
  </head>
  <body>
    <div class="container">
      <h1><a href="/">Epicodus Public Library</a></h1>
      <ul class="nav nav-tabs">
        <li role="presentation"><a href="/patron/{{patron.getId}}">Patron</a></li>
        <li role="presentation" class="active"class="active"><a href="/admin/{{patron.getId}}">Admin</a></li>
      </ul>
      <div class="row">
        <div class="col-xs-4">

        </div>
        <div class="col-xs-4">
          <h2>Checked Out Books</h2>
          {% if checkouts is not empty %}
            <ul>
                {% for checkout in checkouts %}
                  <li class="admin_full_list">{{checkout.getTitle}}</li>
                {% endfor %}
            </ul>
          {% else %}
            <h2>No books checked out!</h2>
          {% endif %}
          <h4><a href="/admin/{{patron.getId}}">Back</a></h4>
        </div>
        <div class="col-xs-4">
        </div>
      </div>
    </div>

  </body>
</html>
