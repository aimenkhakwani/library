  <body>
    <div class="container">
      <div class="row">
        <div class="col-xs-4">
        </div>
        <div class="col-xs-4">
          <h2>Log In</h2>
          <form action="/patron" method="post">
            <br>
            <label for="name">Enter Username:</label>
            <input id="name" type="text" name="name" class="form-control">
